<script>
    // Show/hide sections
    function showSection(sectionId) {
        // Hide all sections
        document.querySelectorAll('.content-section').forEach(section => {
            section.style.display = 'none';
        });

        // Show selected section
        document.getElementById(sectionId + '-section').style.display = 'block';

        // Update active nav item
        document.querySelectorAll('.nav-item').forEach(item => {
            item.classList.remove('active');
        });
        event.currentTarget.classList.add('active');

        // Update page title
        const pageTitle = event.currentTarget.querySelector('span').textContent;
        document.querySelector('.page-title').textContent = pageTitle;
    }

    // Home page tabs
    function showHomeTab(tabId) {
        // Hide all tabs
        document.querySelectorAll('#home-section > div[id$="-tab"]').forEach(tab => {
            tab.style.display = 'none';
        });

        // Show selected tab
        document.getElementById('home-' + tabId + '-tab').style.display = 'block';

        // Update active tab
        document.querySelectorAll('#home-section .tab').forEach(tab => {
            tab.classList.remove('active');
        });
        event.currentTarget.classList.add('active');
    }

    // About page tabs
    function showAboutTab(tabId) {
        // Hide all tabs
        document.querySelectorAll('#about-section > div[id$="-tab"]').forEach(tab => {
            tab.style.display = 'none';
        });

        // Show selected tab
        document.getElementById('about-' + tabId + '-tab').style.display = 'block';

        // Update active tab
        document.querySelectorAll('#about-section .tab').forEach(tab => {
            tab.classList.remove('active');
        });
        event.currentTarget.classList.add('active');
    }

    // Contact page tabs
    function showContactTab(tabId) {
        // Hide all tabs
        document.querySelectorAll('#contact-section > div[id$="-tab"]').forEach(tab => {
            tab.style.display = 'none';
        });

        // Show selected tab
        document.getElementById('contact-' + tabId + '-tab').style.display = 'block';

        // Update active tab
        document.querySelectorAll('#contact-section .tab').forEach(tab => {
            tab.classList.remove('active');
        });
        event.currentTarget.classList.add('active');
    }

    // Load solution page
    function loadSolutionPage(pageId) {
        const editor = document.getElementById('solution-page-editor');
        if (pageId) {
            editor.style.display = 'block';
            // Here you would load the actual content for the selected page
            document.getElementById('solution-title').value = document.querySelector('select option:checked').text;
        } else {
            editor.style.display = 'none';
        }
    }
</script>
</body>
